#include <iostream>
#include <iomanip>
using namespace std;

int main() {
    double topBase, bottomBase, height;

    cin >> topBase;
    cin >> bottomBase;
    cin >> height;
    double area = (topBase + bottomBase) * height / 2;
    cout <<fixed  <<  setprecision(1)<< "Trapezoid area:" << area << endl;

    return 0;
}
